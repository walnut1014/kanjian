<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/contacts_title"
        android:paddingTop="8dp"
        android:paddingBottom="5dp"
        android:paddingLeft="9dp"
        android:textSize="16sp"
        android:textColor="@color/text_gray"
        android:text="@string/contacts_friend"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <RelativeLayout
        android:background="@color/white"
        android:paddingLeft="@dimen/layout_friend_margin_left"
        android:layout_width="match_parent"
        android:layout_height="74dp">

        <com.facebook.drawee.view.SimpleDraweeView
            xmlns:fresco="http://schemas.android.com/apk/res-auto"
            android:id="@+id/avatar"
            android:layout_marginTop="13dp"
            android:layout_marginBottom="13dp"
            android:layout_width="48dp"
            android:layout_height="48dp"
            fresco:placeholderImage="@drawable/icon_avatar_default"/>

        <TextView
            android:id="@+id/nickname"
            android:layout_alignTop="@id/avatar"
            android:textColor="@color/text_black"
            android:layout_marginLeft="60dp"
            android:layout_marginRight="100dp"
            android:singleLine="true"
            android:textSize="18sp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/intro"
            android:textSize="14sp"
            android:layout_marginTop="4dp"
            android:textColor="@color/text_gray"
            android:layout_below="@id/nickname"
            android:singleLine="true"
            android:layout_alignRight="@id/nickname"
            android:layout_alignLeft="@id/nickname"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <View
            android:background="@color/background_divide"
            android:layout_alignParentBottom="true"
            android:layout_width="match_parent"
            android:layout_height="0.5dp"/>

        <Button
            android:text="@string/request_send"
            android:textSize="14sp"
            android:layout_alignParentRight="true"
            android:layout_marginRight="16dp"
            style="@style/IButton.purple"
            android:id="@+id/request_send"
            android:layout_marginTop="18dp"
            android:layout_width="wrap_content"
            android:layout_height="33dp" />

        <TextView
            android:id="@+id/request_status"
            android:textColor="@color/text_gray"
            android:layout_alignParentRight="true"
            android:layout_marginTop="20dp"
            android:layout_marginRight="16dp"
            android:textSize="14sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

    </RelativeLayout>

</LinearLayout>