<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:paddingTop="170dp"
    android:background="@color/activity_background"
    android:gravity="center_horizontal"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:gravity="center_horizontal"
        android:textSize="20sp"
        android:textColor="@color/text_gray"
        android:drawablePadding="15dp"
        android:text="@string/photos_flow_empty"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <Button
        android:id="@+id/action_camera"
        style="@style/IButton.purple"
        android:text="@string/action_camera"
        android:layout_marginTop="20dp"
        android:layout_marginRight="@dimen/layout_empty_button_horizontal_margin"
        android:layout_marginLeft="@dimen/layout_empty_button_horizontal_margin"
        android:layout_width="match_parent"
        android:layout_height="@dimen/button_height" />

</LinearLayout>