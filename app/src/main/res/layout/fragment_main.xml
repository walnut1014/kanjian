<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/activity_background"
    android:orientation="vertical" >

    <RelativeLayout
        android:id="@+id/my_info_container"
        android:layout_marginTop="23dp"
        android:layout_marginBottom="22dp"
        android:background="@drawable/bg_my_item"
        android:padding="11dp"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <com.facebook.drawee.view.SimpleDraweeView
            xmlns:fresco="http://schemas.android.com/apk/res-auto"
            android:id="@+id/my_avatar"
            android:layout_width="72dp"
            android:layout_height="72dp"
            fresco:placeholderImage="@drawable/icon_avatar_default"/>
        <TextView
            android:id="@+id/my_nickname"
            android:text="欧阳菲菲"
            android:textSize="20sp"
            android:layout_marginLeft="85dp"
            android:layout_marginTop="6dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <TextView
            android:id="@+id/my_photo_count"
            android:layout_marginTop="6dp"
            android:textSize="18sp"
            android:text="3张照片"
            android:layout_below="@id/my_nickname"
            android:layout_alignLeft="@id/my_nickname"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <ImageView
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:layout_marginRight="3dp"
            android:src="@drawable/icon_arrow"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        </RelativeLayout>

    <name.walnut.kanjian.app.views.SettingItemView
        android:id="@+id/my_title_friend_request"
        android:clickable="true"
        app:extraContent=""
        app:title="@string/my_title_friend_request"
        app:icon="@drawable/icon_person_request"
        app:showDot="false"
        android:background="@drawable/bg_my_item"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        </name.walnut.kanjian.app.views.SettingItemView>

    <include layout="@layout/layout_my_divide"/>

    <name.walnut.kanjian.app.views.SettingItemView
        android:id="@+id/my_title_friends"
        android:clickable="true"
        app:extraContent=""
        app:title="@string/my_title_friends"
        app:icon="@drawable/icon_my_friends"
        app:showDot="false"
        android:background="@drawable/bg_my_item"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
    </name.walnut.kanjian.app.views.SettingItemView>

    <include layout="@layout/layout_my_divide"/>

    <name.walnut.kanjian.app.views.SettingItemView
        android:id="@+id/my_title_add_friend"
        android:clickable="true"
        app:extraContent=""
        app:title="@string/my_title_add_friend"
        app:icon="@drawable/icon_add_person"
        app:showDot="false"
        android:background="@drawable/bg_my_item"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
    </name.walnut.kanjian.app.views.SettingItemView>

    <include layout="@layout/layout_my_divide"/>

    <name.walnut.kanjian.app.views.SettingItemView
        android:id="@+id/my_title_setting"
        android:clickable="true"
        app:extraContent=""
        app:title="@string/my_title_setting"
        app:icon="@drawable/icon_setting"
        app:showDot="false"
        android:background="@drawable/bg_my_item"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
    </name.walnut.kanjian.app.views.SettingItemView>

</LinearLayout>
