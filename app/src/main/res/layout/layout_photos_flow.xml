<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="horizontal"
    android:paddingLeft="8dp"
    android:paddingRight="8dp"
    android:paddingTop="8dp"
    android:paddingBottom="9dp"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <com.facebook.drawee.view.SimpleDraweeView
        android:id="@+id/avatar"
        app:placeholderImage="@drawable/icon_avatar_default"
        app:placeholderImageScaleType="fitCenter"
        android:layout_width="48dp"
        android:layout_height="48dp" />

    <LinearLayout
        android:layout_marginStart="14dp"
        android:layout_marginLeft="14dp"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/submitter_name"
            android:text="林老师"
            android:singleLine="true"
            android:textSize="18sp"
            android:textColor="@color/text_purple"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/description"
            android:textSize="16sp"
            android:layout_marginTop="4dp"
            android:layout_marginRight="12dp"
            android:layout_marginEnd="12dp"
            android:text="美不胜收,岁月的痕迹，在远方，那种惆怅"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <com.facebook.drawee.view.SimpleDraweeView
            android:id="@+id/photo"
            android:layout_marginTop="10dp"
            app:placeholderImage="@color/gray_dark"
            android:layout_width="193dp"
            android:layout_height="129dp" />

        <RelativeLayout
            android:layout_marginTop="5dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:layout_centerVertical="true"
                android:id="@+id/time"
                android:textSize="12sp"
                android:textColor="@color/text_gray"
                android:text="5分钟前"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <TextView
                android:layout_centerVertical="true"
                android:id="@+id/action_delete"
                android:textSize="12sp"
                android:text="@string/action_delete"
                android:textColor="@color/text_purple_dark"
                android:layout_marginLeft="160dp"
                android:layout_marginStart="160dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <ImageButton
                android:id="@+id/message"
                android:src="@drawable/icon_comment"
                android:paddingLeft="20dp"
                android:paddingTop="4dp"
                android:paddingBottom="4dp"
                android:background="@android:color/transparent"
                android:layout_alignParentRight="true"
                android:layout_alignParentEnd="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            </RelativeLayout>

        <FrameLayout
            android:id="@+id/comments_container"
            android:paddingTop="20dp"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:paddingBottom="10dp"
            android:background="@drawable/bg_photo_comment"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            </FrameLayout>

        </LinearLayout>

</LinearLayout>