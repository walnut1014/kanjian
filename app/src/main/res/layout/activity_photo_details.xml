<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/album_photo"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/black"
        android:src="@drawable/psb" />

    <ScrollView
        android:id="@+id/sv_photo_details"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scrollbars="none">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">


            <View
                android:id="@+id/view_picture"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

            <RelativeLayout
                android:id="@+id/rl_portrait_and_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/view_picture"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="20dip">

                <TextView
                    android:id="@+id/tv_main_photo_describe"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20dip"
                    android:layout_marginRight="20dip"
                    android:layout_marginTop="50dip"
                    android:maxLines="3"
                    android:text="那天天气超级热,正好又没有加班,于是我带着我的滑板来到音乐厅,一个装X的地方"
                    android:textSize="30sp"
                    android:textColor="@color/white" />


                <name.walnut.kanjian.app.views.RoundImageView
                    android:id="@+id/iv_personal_portrait"
                    border_inside_color="@color/white"
                    border_thickness="2dip"
                    android:layout_width="80dip"
                    android:layout_height="80dip"
                    android:layout_below="@id/tv_main_photo_describe"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="120dip"
                    android:src="@drawable/icon_avatar_default" />

                <TextView
                    android:id="@+id/tv_nickname"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/iv_personal_portrait"
                    android:layout_centerHorizontal="true"
                    android:singleLine="true"
                    android:layout_marginTop="20dip"
                    android:text="闪闪的亨利"
                    android:textColor="@color/white"
                    android:textSize="20sp" />

                <TextView
                    android:id="@+id/tv_time"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/tv_nickname"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="20dip"
                    android:text="拍摄于2014/09/10  21:04"
                    android:textColor="@color/white"
                    android:textSize="20sp"/>
            </RelativeLayout>

            <FrameLayout
                android:id="@+id/fl_comments_container"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/rl_portrait_and_name"
                android:layout_marginBottom="10dip" />
        </RelativeLayout>
    </ScrollView>
    <Button
        android:id="@+id/lt_comment"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:layout_marginRight="10dip"
        android:layout_marginBottom="10dip"
        android:text="评论">
    </Button>
</RelativeLayout>