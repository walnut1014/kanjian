<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <RelativeLayout
        android:paddingLeft="@dimen/layout_friend_margin_left"
        android:background="@color/white"
        android:layout_width="match_parent"
        android:layout_height="74dp">

        <com.facebook.drawee.view.SimpleDraweeView
            xmlns:fresco="http://schemas.android.com/apk/res-auto"
            android:id="@+id/avatar"
            android:layout_marginTop="13dp"
            android:layout_marginBottom="13dp"
            android:layout_width="48dp"
            android:layout_height="48dp"
            fresco:placeholderImage="@drawable/icon_avatar_default"/>

        <TextView
            android:id="@+id/nickname"
            android:layout_alignTop="@id/avatar"
            android:textColor="@color/text_black"
            android:layout_marginLeft="60dp"
            android:layout_marginRight="100dp"
            android:singleLine="true"
            android:textSize="20sp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/intro"
            android:textSize="14sp"
            android:textColor="@color/text_gray"
            android:layout_below="@id/nickname"
            android:layout_alignLeft="@id/nickname"
            android:layout_alignRight="@id/nickname"
            android:singleLine="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <View
            android:background="@color/background_divide"
            android:layout_alignParentBottom="true"
            android:layout_width="match_parent"
            android:layout_height="0.5dp"/>
    </RelativeLayout>

    <Button
        android:visibility="gone"
        android:id="@+id/add_friend_button"
        android:text="@string/friend_action_add_friend"
        android:layout_marginLeft="@dimen/layout_friend_margin_left"
        android:layout_marginRight="@dimen/layout_friend_margin_left"
        android:layout_marginBottom="16dp"
        android:layout_marginTop="16dp"
        style="@style/IButton.purple"
        android:layout_width="match_parent"
        android:layout_height="@dimen/button_height" />

</LinearLayout>