<resources>

    <!--
         Declare custom theme attributes that allow changing which styles are
         used for button bars depending on the API level.
         ?android:attr/buttonBarStyle is new as of API 11 so this is
         necessary to support previous API levels.
    -->

    <attr name="maxLength" format="integer"/>


    <declare-styleable name="ButtonBarContainerTheme">
        <attr name="metaButtonBarStyle" format="reference" />
        <attr name="metaButtonBarButtonStyle" format="reference" />
    </declare-styleable>

    <declare-styleable name="ClearEditText">
        <attr name="hint" format="string|reference"/>
        <attr name="maxLength"/>
    </declare-styleable>

    <declare-styleable name="SettingItemView">
        <attr name="icon" format="reference"/>
        <!--标题内容-->
        <attr name="title" format="string"/>
        <!--是否显示小红点-->
        <attr name="showDot" format="boolean"/>
        <attr name="extraContent" format="string"/>
    </declare-styleable>

    <declare-styleable name="UploadPreviewView">
        <attr name="checked" format="boolean"/>
        <attr name="maxLength"/>
    </declare-styleable>

    <declare-styleable name="SpanTextView">
        <attr name="spanColor" format="color"/>
    </declare-styleable>

</resources>
