<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="IButton" parent="android:TextAppearance.Widget.Button">
        <item name="android:textSize">18sp</item>
    </style>

    <style name="IButton.purple" >
        <item name="android:background">@drawable/bg_button_purple</item>
        <item name="android:textColor">@color/text_white</item>
        <item name="android:textSize">18sp</item>
    </style>

    <style name="IButton.white" >
        <item name="android:background">@drawable/bg_button_white</item>
        <item name="android:textColor">@color/text_purple</item>
        <item name="android:textSize">18sp</item>
    </style>

    <style name="IButton.popup" >
        <item name="android:background">@drawable/bg_popup_button</item>
        <item name="android:textColor">@color/text_black</item>
        <item name="android:textSize">18sp</item>
    </style>

    <style name="IAlertDialog" parent="android:Theme.Holo.Dialog">
    </style>


    <style name="LoginDialog" parent="android:Theme.Holo.Dialog.NoActionBar">
    </style>

    <style name="SearchDialog" parent="android:Theme.Holo.Dialog.NoActionBar">
        <item name="android:windowIsTranslucent">false</item>
        <item name="android:windowBackground">@android:color/transparent</item>
    </style>

    <style name="IActionBar">
        <item name="android:paddingLeft">10dp</item>
        <item name="android:paddingRight">10dp</item>
        <item name="android:gravity">center_vertical</item>
    </style>

    <style name="IActionBar.Title">
        <item name="android:textColor">@color/text_white</item>
        <item name="android:textSize">@dimen/actionbar_title_font_size</item>
    </style>

    <style name="IActionBar.ImageButton">
        <item name="android:minWidth">48dp</item>
        <item name="android:background">@android:color/transparent</item>
    </style>

</resources>